<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120sp"
    android:id = "@+id/layout_portraitview"
    android:background="@color/huise"
    android:orientation="vertical" 
    android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >
          <ImageView
        android:id ="@+id/file_browes"
        android:layout_width="0dp"
        android:layout_height="60.0sp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/button_switch" />
     
      <!--拍照 -->
     <ImageView
        android:id ="@+id/takepicture"
        android:layout_width="0dp"
        android:layout_height="60.0sp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/button_snapshot" />
  
     
      <!--录像  -->
      <ImageView
          android:id="@+id/recording"
          android:layout_width="0dp"
          android:layout_height="60.0sp"
          android:layout_weight="1"
          android:background="@android:color/transparent"
          android:padding="5dp"
          android:scaleType="centerInside"
          android:src="@drawable/button_record" />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"  
        android:layout_height="1dp"  
        android:background="#ffffff"  
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >
       <!--设备连接状态  -->
     <ImageView
         android:id="@+id/connect_status"
         android:layout_width="0dp"
         android:layout_height="50dp"
         android:layout_weight="1"
         android:background="@android:color/transparent"
         android:padding="5dp"
         android:scaleType="centerInside"
         android:src="@drawable/wifi_disabled" />
      <!--文件浏览  -->
      <ImageView
         android:id="@+id/play_off"
         android:layout_width="0dp"
         android:layout_height="50dp"
         android:layout_weight="1"
         android:background="@android:color/transparent"
         android:padding="5dp"
         android:scaleType="centerInside"
         android:src="@drawable/pause" /> 
      <!--设置  -->

    <!--   <ImageView
          android:id="@+id/setting"
         android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:background="@android:color/transparent"
          android:padding="5dp"
          android:scaleType="centerInside"
          android:src="@drawable/button_option" />  -->
      </LinearLayout> 
    

</LinearLayout>
