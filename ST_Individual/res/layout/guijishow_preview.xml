<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/guijishow_layout"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:background="@color/blueTranslucent"
     android:orientation="horizontal" >
    <TextView
        android:id="@+id/preview_guijishow_txt"
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/main_actionbar_btn_bg"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="center"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/guijishow"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/preview_guijishow_btn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/main_actionbar_btn_bg"
        android:clickable="true"
        android:contentDescription="@string/Description"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/actionbar_more_icon" />

</RelativeLayout>
