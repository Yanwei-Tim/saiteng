<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:text="选择设置录像时间，默认无限制" />
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal" >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="预设录像时间:"
            />
        <Spinner
            android:id="@+id/recordtime_txt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:entries="@array/record_time"
            />
        
    </LinearLayout>
     <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
         <Button
            android:id="@+id/recordtime_ok"
            android:layout_gravity="center"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:text="确定"
            />
          <View
            android:id="@+id/recordtime_lan_view_line0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/DrakGrey" />
         <Button
            android:id="@+id/recordtime_cancel"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="取消"
            />
        </LinearLayout>

</LinearLayout>
